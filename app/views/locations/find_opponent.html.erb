<script src = "http://husa.github.io/timer.js/dist/timer.js"></script>

<script>
  
    setTimeout(function(){ 
        
        // Make hidden content visible
        var find_opponent = document.getElementById('find_opponent');
        find_opponent.style.visibility = 'hidden';

        // Delete find opponent text
        var element = document.getElementById("find_opponent");
        element.outerHTML = "";
        delete element;

        // Show opponent's name
        var opponent_name = document.getElementById('opponent_name');
        opponent_name.style.visibility = 'visible';

        // Show first round
        var first_round = document.getElementById('first_round');
        first_round.style.visibility = 'visible';

        // Show guess button
        var guess_button = document.getElementById('guess_button');
        guess_button.style.visibility = 'visible';
        
      }
    , 4000); //Wait 3 seconds

    

</script>

<% content_for :about_status do %>
	active
<% end %>

<% content_for :navigation do %>

	<% if @signed_in == true %>
	    <!-- <li class="active"><%= link_to @username, profile_path %></li> -->
	    <li><%= link_to @current_user['username'], profile_path %></li>
        <li><%= link_to 'Logout', user_logout_action_path %></li>
	<% else %>
		<li><%= link_to 'Sign up', user_signup_path %></li>
	<% end %>

<% end %>

<div class = "container">
	
  <!-- Finding opponent text + spinner -->
	<div class = "row" id = "find_opponent">
		<center>
			<div class="col-md-6 col-md-offset-3">
				<h3 style = "color:#428bca;">
					We're finding someone for you to play!
				</h3>
				<br><br><br>
				<!-- Spinner.css -->
				<div class="wobblebar-loader"></div>
			</div>


		</center>
	</div>

  <!-- Display opponent's name -->
  <div class = "row" id = "opponent_name" style = "visibility: hidden;">
    <center>
      <h3 style = "color:#428bca;">You're playing Sharat!</h3>
      <hr width = "50%">
    </center>
  </div>

  <!-- Show first round's picture -->
  <div class = "row" id = "first_round" style = "visibility: hidden;">
    <center>
      <h3>Round 1/3</h3>
      <a href="/map_page/location/<%= @locationId %>">
        <img src = "https://scontent.cdninstagram.com/hphotos-xfa1/t51.2885-15/s640x640/sh0.08/e35/11850092_444946392362326_1423639661_n.jpg" class = "img-responsive">
      </a>
    </center>
  </div>
  
  <!-- Tap to guess text -->
  <div class = "row" id = "guess_button" style = "visibility: hidden; margin-top:30px;">
    <center>
      <a class="btn btn-success btn-lg" href="/map_page/location/<%= @locationId %>">
        Guess &raquo;
      </a>
    </center>
  </div>
		<br><br><br><br>
	<!-- Google footer ad -->
	<%= render 'footeradtemplate' %>

</div>

